<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextView.Default.Medium" parent="@style/TextView.Default">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>
    <style name="TextView.Default" parent="@style/TextView">
        <item name="android:fontFamily">@font/iran_sans_mobile_medium</item>
        <item name="fontFamily">@font/iran_sans_mobile_medium</item>
    </style>
    <style name="TextView.Light" parent="@style/TextView">
        <item name="android:fontFamily">@font/iran_sans_mobile_light</item>
        <item name="fontFamily">@font/iran_sans_mobile_light</item>
    </style>
    <style name="TextView.Light.ExtraExtraLarge" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_extra_extra_extra_large</item>
    </style>
    <style name="TextView.Light.ExtraLarge" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_extra_large</item>
    </style>
    <style name="TextView.Light.Large" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_large</item>
    </style>
    <style name="TextView.Light.LocaleNumerals" parent="@style/TextView.Light">
        <item name="android:fontFamily">@font/iran_sans_mobile_light</item>
        <item name="fontFamily">@font/iran_sans_mobile_light</item>
    </style>
    <style name="TextView.Light.Medium" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>
    <style name="TextView.Light.Small" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_small</item>
    </style>
    <style name="TextView.Light.VerySmall" parent="@style/TextView.Light">
        <item name="android:textSize">@dimen/font_size_very_small</item>
    </style>
    <style name="Divider">
        <item name="android:background">@color/white_three</item>
    </style>
    <style name="Divider.Horizontal" parent="@style/Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.5dip</item>
    </style>
    <style name="Divider.Vertical" parent="@style/Divider">
        <item name="android:layout_width">0.5dip</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="MirroredImage">
        <item name="android:scaleX">1.0</item>
    </style>
    <style name="SnappToolbar" />
    <style name="SnappToolbar.Secondary" parent="@style/SnappToolbar">
        <item name="android:textColorPrimary">@color/grayish_brown</item>
        <item name="android:textColorSecondary">@color/grayish_brown</item>
        <item name="android:textColor">@color/grayish_brown</item>
        <item name="android:background">@color/pure_white</item>
        <item name="actionMenuTextColor">@color/grayish_brown</item>
    </style>
    <style name="SnappAppBarLayout" parent="@style/ThemeOverlay.AppCompat.ActionBar" />
    <style name="SnappAppBarLayout.Primary" parent="@style/SnappAppBarLayout" />
    <style name="SnappAppBarLayout.Secondary" parent="@style/SnappAppBarLayout" />
 </resources>
